						<onright>3013</onright>
					</control>
					<control type="button" id="3013">
						<description>cancel button</description>
						<width>200</width>
						<height>40</height>
						<label>222</label>
						<font>font12_title</font>
						<onleft>3012</onleft>
						<onright>3012</onright>
					</control>
				</control>
				<control type="label" id="1">
					<left>0</left>
					<top>120</top>
					<width>910</width>
					<height>25</height>
